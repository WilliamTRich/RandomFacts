@model MyViewModel
@await Html.PartialAsync("_Nav")
<div class="container">
    <div class="row d-flex justify-content-center">
        @foreach (FactModel f in @Model.Facts)
        {
            <div class="card overflow-auto m-2 border-info" style="width: 16rem; height: 15rem;">
                <div class="card-body p-4 text-center">
                    <p class="card-text">@f.fact</p>
                    <form asp-action="SaveFact" asp-controller="Home" method="post">
                        <input type="hidden" asp-for="User.UserId" value=@Model.User.UserId>
                        <input type="hidden" asp-for="Fact.fact" value=@f.fact>
                        <button type="submit" class="btn btn-info">Save
                            Fact</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
