@model MyViewModel
<header class="d-flex justify-content-between p-3">
    <div class="d-flex justify-content-start align-items-center gap-3">
        <h3>@Model.User.Username - Random Facts</h3>
        <a asp-action="Facts" asp-controller="Home" class="btn btn-success">Home</a>
    </div>
    <div class="d-flex gap-3">
        <form asp-action="UserInfo" asp-controller="Home" asp-route-id=@Model.User.UserId method="get">
            <button class="btn btn-primary">Account Info</button>
        </form>
        <form asp-action="Logout" asp-controller="Home" method="post">
            <button type="submit" class="btn btn-danger">Logout</button>
        </form>
    </div>
</header>